<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.petrsu.smartquestions"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.petrsu.smartquestions.SQAuthorization"
            android:label="@string/title_activity_sqauthorization" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.petrsu.smartquestions.SQRegistration"
            android:label="@string/title_activity_sqregistration" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="SQAuthoriztion" />
        </activity>
        <activity
            android:name="ru.petrsu.smartquestions.SQProfile"
            android:label="@string/title_activity_sqprofile" >
        </activity>
        <activity
            android:name="ru.petrsu.smartquestions.SQPlaceQuestion"
            android:label="@string/title_activity_sqplace_question" >
        </activity>
        <activity
            android:name="ru.petrsu.smartquestions.SQMyQuestions"
            android:label="@string/title_activity_sqmy_questions" >
        </activity>
        <activity
            android:name="ru.petrsu.smartquestions.SQQuestionBrowser"
            android:label="@string/title_activity_sqquestion_browser" >
        </activity>
        <activity
            android:name="ru.petrsu.smartquestions.SQAnswer"
            android:label="@string/title_activity_sqanswer" >
        </activity>
        <activity
            android:name="ru.petrsu.smartquestions.SQAnswerBrowser"
            android:label="@string/title_activity_sqanswer_browser" >
        </activity>
    </application>

</manifest>